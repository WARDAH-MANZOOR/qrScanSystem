{
  "compilerOptions": {
    "target": "ESNext",        // Set to ESNext for latest JS features
    "module": "nodenext",      // CommonJS for Node.js module system
    "rootDir": "./src",        // Source folder where your TS files will reside
    "outDir": "./dist",        // Where to output compiled JS files
    "strict": true,            // Enable all strict type-checking options
    "esModuleInterop": true,   // Ensure compatibility with CommonJS modules
    "skipLibCheck": true,      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],          // Include the "src" folder for TypeScript compilation
  "exclude": ["node_modules"]  // Exclude node_modules from compilation
}