// schema.prisma

datasource db {
  provider = "postgresql" // Assuming PostgreSQL
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum TransactionStatus {
  completed
  pending
  failed
}

enum TransactionType {
  purchase
  refund
  chargeback
}

model Transaction {
  transaction_id Int       @id @default(autoincrement()) @unique
  date_time      DateTime
  amount         Decimal   @db.Decimal(10, 2)
  issuer_id      Int
  issuer         Issuer    @relation(fields: [issuer_id], references: [issuer_id])
  status         TransactionStatus // Enum for status
  type           TransactionType   // Enum for type
  response_message String?
  settlement     Boolean   @default(false)
  pan_details    PANDetails?
}

model PANDetails {
  pan_details_id Int         @id @default(autoincrement()) // Primary key
  transaction_id Int         @unique// Foreign key reference to Transaction
  transaction    Transaction @relation(fields: [transaction_id], references: [transaction_id]) // One-to-One relation
  pan            String      // Equivalent to CharField(max_length=19)
  stan           String      // Equivalent to CharField(max_length=12)

  @@map("pan_details") // Custom table name if needed
}

model Issuer {
  issuer_id   Int           @id @default(autoincrement()) // Primary key with auto-increment
  issuer_name String        // Equivalent to CharField(max_length=255)
  transactions Transaction[] // One-to-many relation with Transaction (issuer-related transactions)

  @@map("issuer") // Custom table name if needed
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  age       Int?
  groups    UserGroup[]
}

model Group {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  permissions GroupPermission[]
  users       UserGroup[]
}

model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  groups      GroupPermission[]
}

model UserGroup {
  userId     Int
  groupId    Int
  user       User     @relation(fields: [userId], references: [id])
  group      Group    @relation(fields: [groupId], references: [id])

  @@id([userId, groupId])
}

model GroupPermission {
  groupId     Int
  permissionId Int
  group       Group      @relation(fields: [groupId], references: [id])
  permission  Permission @relation(fields: [permissionId], references: [id])

  @@id([groupId, permissionId])
}

model ScheduledTask {
  id            Int       @id @default(autoincrement())
  transactionId Int?
  status        String    @db.VarChar(50)
  scheduledAt   DateTime? @db.Timestamptz
  executedAt    DateTime? @db.Timestamptz
}
